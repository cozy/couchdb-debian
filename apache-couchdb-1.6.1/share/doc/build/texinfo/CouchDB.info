           Fun = fun({Row}, Acc) ->
             Id = couch_util:get_value(<<"id">>, Row),
             Send(list_to_binary(io_lib:format("Previous doc id: ~p~n", [Acc]))),
             Send(list_to_binary(io_lib:format("Current  doc id: ~p~n", [Id]))),
             {ok, Id}
